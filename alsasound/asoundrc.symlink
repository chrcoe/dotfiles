# changes from here: http://www.alsa-project.org/main/index.php/Asoundrc#dmix

pcm.!default {
    type plug
    slave.pcm "dmixer"
}

pcm.dmixer  {
     type dmix
     ipc_key 1024
     slave {
        pcm "hw:1,0"
        # pcm "hw:2,0"
        period_time 0
        period_size 4096
        buffer_size 16384
        rate 44100
    }
    bindings {
        0 0
        1 1
    }
}

ctl.dmixer {
    type hw
    card 1  # laptop
    # card 2  # docked
}
